{
    "filtered": {
        "filter": {
            "or": {
                "filters": [
                    {
                        "missing": {
                            "field": "housenumber"
                        }
                    },
                    {
                        "query": {
                            "match": {
                                "housenumber": {
                                    "query": "${query}",
                                    "analyzer": "standard"
                                }
                            }
                        }
                    },
                    {
                        "exists": {
                            "field": "name.${lang}.raw"
                        }
                    }
                ]
            }
        },
        "query": {
            "function_score": {
                "query": {
                    "multi_match": {
                        "fuzziness": 1,
                        "analyzer": "search",
                        "prefix_length": 3,
                        "fields": ["name.${lang}.ngramed^3", "name.${lang}.raw^10", "collector.${lang}.raw", "collector.${lang}"],
                        "minimum_should_match": "${should_match}",
                        "query": "${query}",
                        "type": "best_fields"
                    }
                },
                "score_mode": "multiply",
                "functions": [
                    {
                        "script_score": {
                            "params": {
                                "lat": ${lat}, "maxDist": 100, "lon": ${lon}},
"script": "dist = doc['coordinate'].distanceInKm(lat, lon); 1 / (0.5 - 0.5 * exp(-5*dist/maxDist))"
}
},
{
"script_score": {"script": "1 + doc['importance'].value * 40"}
}
],"boost_mode": "multiply"
}
}
}
}