{
	"analysis":
	{
		"analyzer":
		{
			"index_ngram":
			{
				"tokenizer": "edge_ngram",
				"filter": ["lowercase"]	
			},
			"search_ngram":
			{
				"tokenizer": "standard",
				"filter": ["lowercase"]
			},
			"index_raw":
			{
				"char_filter": ["punctuationgreedy"],
				"filter": 
				[
					"word_delimiter",
					"lowercase",
					"asciifolding",
					"unique"	
				],
				"tokenizer": "standard"	
			},
			"search_raw":
			{
				"char_filter": ["punctuationgreedy"],
				"filter": 
				[
					"word_delimiter",
					"lowercase",
					"asciifolding",
					"unique"	
				],
				"tokenizer": "standard"	
			}	
		},
		"tokenizer":
		{
			"edge_ngram":
			{
				"type": "edge_ngram",
				"min_gram": 1,
				"max_gram": 100,
				"token_chars": ["letter", "digit"]	
			}	
		},
		"char_filter":
		{
			"punctuationgreedy":
			{
				"type": "pattern_replace",
				"pattern": "[\\.,]"	
			}	
		},
		"filter":
		{
			"photonlength":
			{
				"min": "2",
				"type": "length"	
			}	
		}	
	}	
}